---
import Header from "../components/Header.astro"
import Footer from "../components/Footer.astro";

const {pageTitle, subPage} = Astro.props
---
<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="shortcut icon" href="/icons/logo.svg" type="image/x-icon">
  <title>{pageTitle}</title>
</head>
<body class="
  text-white
  m-0 p-0 
  bg-cold-800
">
  <Header subPage={subPage} />
  <main>
    <slot />
  </main>
  <Footer pageTitle={pageTitle} />
</body>
</html>

<style is:global>
  :root {
    --large: 4.8rem;
    --medium: 3.2rem;
    --small: 2.4rem;
    --smaller: 1.6rem;
  }
  * {
    box-sizing: border-box;
  }

  @font—face {
    font—family: 'SplineSans-Bold';
    src: url('/fonts/SplineSans-Bold.ttf');
    font—weight: bold;
  }
  
  @font-face {
    font-family: 'MonoDisplay-normal';
    src: url('/fonts/MajorMonoDisplay-Regular.ttf');
    font—weight: normal;
  }

  @font-face {
    font-family: 'SplineSans-Regular';
    src: url('/fonts/SplineSans-Regular.ttf');
    font-weight: 400;
  }
</style>
