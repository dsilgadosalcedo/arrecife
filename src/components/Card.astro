---
type FromColor = `from-${string}`
type ToColor = `to-${string}`

interface Props {
  title: string
  description: string
  url?: string
  image: string
  fromColor: FromColor
  toColor: ToColor
}

const {
  title,
  description,
  url = '#',
  image,
  fromColor,
  toColor
} = Astro.props as Props
---

<a 
  href={url}
  class=`
    card
    bg-gradient-to-bl ${fromColor} ${toColor}
    rounded-[48px]
    w-64 sm:w-full h-[500px] sm:h-80 p-6 sm:p-0
    flex flex-col justify-center items-center
    cursor-pointer
    sm:opacity-90 sm:hover:opacity-100
    sm:hover:shadow-cold-400/20 sm:shadow-md
    sm:transition-all sm:duration-100 sm:hover:ease-in-out
  `>
  <img src={image} alt="Image 1" class="w-40 mb-4">
  <h3 class="text-2xl font-splineSans-bold">{title}</h3>
  <div class="p-4 rounded-3xl self-center">
    <p class="text-center w-52 px-4">{description}</p>
  </div>
</a>
