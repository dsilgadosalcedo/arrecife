---
const {title, description, url, image, firstColor, secondColor} = Astro.props
---

<a 
  href={url}
  class=`
    card
    bg-gradient-to-bl ${firstColor} ${secondColor}
    rounded-[48px]
    w-64 sm:w-full h-[500px] sm:h-96 p-6 sm:p-0
    flex flex-col justify-center items-center
    cursor-pointer
    sm:opacity-90 sm:hover:opacity-100
    sm:hover:shadow-cold-400/20 sm:shadow-md
    sm:transition-all sm:duration-100 sm:hover:ease-in-out
  `>
  <img src={image} alt="Image 1" class="w-40 mb-4">
  <h3 class="text-2xl font-splineSans-bold">{title}</h3>
  <div class="p-4 rounded-3xl self-center">
    <p class="text-center w-52">{description}</p>
  </div>
</a>
